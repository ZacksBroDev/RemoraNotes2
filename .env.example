# Environment
NODE_ENV=development

# Server
PORT=3001
API_URL=http://localhost:3001
CLIENT_URL=http://localhost:5173

# MongoDB
MONGODB_URI=mongodb://localhost:27017/remoranotes

# Redis (optional for local dev)
# REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production-must-be-32-chars
JWT_EXPIRES_IN=7d

# Google OAuth
# Get these from Google Cloud Console -> APIs & Services -> Credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# AWS (LocalStack for development)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_ENDPOINT_URL=http://localhost:4566

# KMS (LocalStack)
KMS_CMK_ARN=arn:aws:kms:us-east-1:000000000000:key/test-key-id

# SES
SES_FROM_ADDRESS=noreply@localhost.test

# Security
HASH_PEPPER=your-hash-pepper-must-be-at-least-32-characters-long

# Feature Flags
FEATURE_CALENDAR_SYNC=true
FEATURE_CONTACT_IMPORT=true
